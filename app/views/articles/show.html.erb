<section class="post-header">
  <div class="container padding-base">
  <div class="background" style="background-image: url('<%= post.cover.url(:desktop) %>')"></div>
    <h1 class="post-title">
      <%= post.title %>
    </h1>
  </div>
</section>

<section class="container padding-base">
  <div class="post-body">
    <%= post.body.html_safe %>
  </div>
</section>
