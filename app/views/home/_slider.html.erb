      <div class="slide" style="background-image: url('<%= slide.image.url(:desktop) %>')">
        <div class="content">
          <div class="title">
            <%= slide.title %>
          </div>
          <div class="body">
            <div class="text">
              <%= slide.body.html_safe %>
            </div>
            <%= link_to 'Ver MÃ¡s', slide.url, class: 'button green' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="controls">
    <div class="left"></div>
    <div class="right"></div>
  </div>
</div>
